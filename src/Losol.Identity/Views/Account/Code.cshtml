@model Losol.Identity.Controllers.Account.SmsCodeVerificationModel

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<div class="login-page">
    <div class="page-header">
        <h1>@Localizer["Login"]</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@Localizer["Local Login"]</h3>
                </div>
                <div class="panel-body">
                    <form asp-action="Code">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <input type="hidden" asp-for="PhoneNumber" />
                        <input type="hidden" asp-for="TokenKey" />

                        <fieldset>

                            <div class="form-group">
                                <label asp-for="SmsCode"><span>@Localizer["Enter SMS Code"]</span></label>
                                <input class="form-control" placeholder="@Localizer["SMS Code"]" asp-for="SmsCode" autofocus>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="verify">@Localizer["Verify"]</button>
                                <button class="btn btn-secondary" name="button" value="resend">@Localizer["Resend Code"]</button>
                                <button class="btn btn-secondary" name="button" value="cancel">@Localizer["Cancel"]</button>
                            </div>

                        </fieldset>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
